<%- include('partials/header.ejs'); -%>
<main class="main">
  <div class="login-form">
    <h2 class="heading-secondary ma-bt-lg">Log into your account</h2>
    <form class="form form--login" action="/login" method="post">
      <div class="form__group">
        <label class="form__label" for="email">Email address</label>
        <input id="email" class="form__input" type="email" placeholder="you@example.com" required autocomplete="username">
      </div>
      <div class="form__group ma-bt-md">
        <label class="form__label" for="password">Password</label>
        <input id="password" class="form__input" type="password" placeholder="Create a password" required minlength="8" autocomplete="current-password">
      </div>
      <div class="form__group">
        <a href="/forgotPassword" class="forgot-password-link" style="color: #55c57a; font-size: 1.4rem; text-decoration: none;">Forgot Password?</a>
      </div>
      <div class="form__group">
        <button class="btn btn--green btn--login" type="submit">Login</button>
      </div>
    </form>
  </div>

</main>
<%- include('partials/footer.ejs'); -%>