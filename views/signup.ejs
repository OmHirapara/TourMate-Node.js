<%- include('partials/header.ejs'); -%>
<main class="main">
  <div class="registration-form">
    <h2 class="heading-secondary ma-bt-lg">Signup Into TourMate</h2>
    <form class="form form--signup" name="signupForm">
      <div class="form__group">
        <label class="form__label" for="name">Name:</label>
        <input id="name" class="form__input" type="text" name="name" required>
      </div>
      <div class="form__group ma-bt-md">
        <label class="form__label" for="email">Email:</label>
        <input id="email" class="form__input" type="email" name="email" placeholder="you@example.com" required autocomplete="username">
      </div>
      <div class="form__group ma-bt-md">
        <label class="form__label" for="password">Password:</label>
        <input id="password" class="form__input" type="password" name="password" placeholder="Enter Your Password" required minlength="8" maxlength="20" autocomplete="new-password" pattern="(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,20}">
        <small class="password-hint" style="color:red; font-size:1.2em; font-weight: bold; display:none;">
          Password must contain a minimum of 8 and a maximum of 20 characters, include at least one uppercase letter,
          one lowercase letter, one number, and one special character.
        </small>
      </div>
      <div class="form__group ma-bt-md">
        <label class="form__label" for="password_confirm">Confirm Password:</label>
        <input id="password_confirm" class="form__input" type="password" name="password_confirm" placeholder="Enter Your Password" required minlength="8" maxlength="20" autocomplete="new-password">
        <div class="error-message" style="color:red; font-size:1.2em; font-weight: bold; display:none;">Passwords do
          not match.</div>
      </div>
      <div class="form__group">
        <button class="btn btn--green btn--register" type="submit" id="resetBtn" disabled>Register</button>
      </div>
    </form>
  </div>
</main>
<%- include('partials/footer.ejs'); -%>